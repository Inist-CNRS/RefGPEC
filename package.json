{
  "name": "refgpec",
  "version": "1.0.0",
  "description": "Application de gestion d'un référentiel de profils/compétences pour une démarche GPEC",
  "contributors": [
    {
      "name": "Stéphane Gully",
      "url": "https://github.com/kerphi"
    }
  ],
  "license": "MIT",
  "private": true,
  "scripts": {
    "watch-js": "watchify -vd -p [ browserify-hmr -h 0.0.0.0 ] -e www/src/main.jsx -o www/dist/bundle.js",
    "watch-less": "watch 'lessc www/less/*.less > www/dist/bundle.css && echo \"-> bundle.css written [$(date +%T)]\"' ./www/less/",
    "serve": "http-server -p 8080 -s -c 1 www/",
    "dev": "npm-run-all --parallel watch-js watch-less serve help",
    "help": "sleep 1 && echo '' && echo '\\033[107;33;7m --> Open \\033[1mhttp://127.0.0.1:8080\\033[0m\\033[107;33;7m in your browser for debugging RefGPEC. \\033[0m' && echo ''",
    "build": "npm run build-js && npm run build-css",
    "build-js": "NODE_ENV=production browserify -d www/src/main.jsx -p [minifyify --no-map] > www/dist/bundle.js",
    "build-css": "lessc --clean-css='--compatibility=ie8 --advanced' www/less/*.less > www/dist/bundle.css",
    "lint": "eslint --ext .js,.jsx www/src",
    "inservversion:readme": "sed -i \"s#\\(inistcnrs/refgpec:\\)\\([\\.a-z0-9]\\+\\)#\\1${npm_package_version}#g\" README.md",
    "insertversion:docker-compose": "sed -i \"s#\\(image: inistcnrs/refgpec:\\)\\([\\.a-z0-9]\\+\\)#\\1${npm_package_version}#g\" docker-compose.yml",
    "preversion": "#npm run lint",
    "version": "npm run inservversion:readme && npm run insertversion:docker-compose && git add docker-compose.yml README.md",
    "postversion": "git push && git push --tags"
  },
  "browserify": {
    "transform": [
      [
        "babelify",
        {
          "presets": [
            "es2015",
            "stage-2",
            "react"
          ]
        }
      ]
    ]
  },
  "dependencies": {
    "react": "15.3.2",
    "react-cookie": "^0.4.8",
    "react-dom": "15.3.2",
    "react-router": "^2.8.1"
  },
  "devDependencies": {
    "babel-core": "6.16.0",
    "babel-plugin-transform-runtime": "6.15.0",
    "babel-preset-es2015": "6.16.0",
    "babel-preset-react": "^6.16.0",
    "babel-preset-stage-2": "6.16.0",
    "babel-runtime": "6.11.6",
    "babelify": "7.3.0",
    "browserify": "13.1.0",
    "browserify-hmr": "0.3.5",
    "cross-env": "3.0.0",
    "eslint": "^3.6.1",
    "eslint-plugin-html": "1.5.3",
    "eslint-plugin-react": "6.3.0",
    "http-server": "0.9.0",
    "less": "^2.7.1",
    "less-plugin-clean-css": "^1.5.1",
    "minifyify": "^7.3.3",
    "npm-run-all": "3.1.0",
    "reactify": "1.1.1",
    "uglify-js": "2.7.3",
    "uglifyjs": "^2.4.10",
    "watch": "^1.0.1",
    "watchify": "^3.7.0"
  }
}
